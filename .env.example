# Database
DATABASE_URL=postgres://user:password@localhost:5432/energyguard

# MQTT Broker
MQTT_URL=mqtt://localhost:1883
MQTT_USERNAME=energyguard_app
MQTT_PASSWORD=your_mqtt_password

# Redis (optional - will fallback to in-memory cache)
REDIS_URL=redis://:your_redis_password@localhost:6379

# Authentication (REQUIRED for production!)
BETTER_AUTH_SECRET=generate-a-secure-32-char-string-here
# or
AUTH_SECRET=generate-a-secure-32-char-string-here

# Internal API key for simulator/internal services (optional)
INTERNAL_API_KEY=your_internal_api_key_here

# CORS / Trusted Origins (comma-separated for multiple)
TRUSTED_ORIGINS=https://your-domain.com

# Optional: Docker Compose passwords
DB_PASSWORD=your_secure_db_password
REDIS_PASSWORD=your_secure_redis_password
MQTT_ADMIN_PASSWORD=your_secure_mqtt_admin_password

# Environment
NODE_ENV=production
